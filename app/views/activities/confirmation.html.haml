%meta{:content => "initial-scale=1,maximum-scale=1,user-scalable=no", :name => "viewport"}/
%script{:src => "https://api.mapbox.com/mapbox.js/v2.2.2/mapbox.js"}
%link{:href => "https://api.mapbox.com/mapbox.js/v2.2.2/mapbox.css", :rel => "stylesheet"}/
%script{:src => "https://api.mapbox.com/mapbox.js/plugins/leaflet-locatecontrol/v0.43.0/L.Control.Locate.min.js"}
%link{:href => "https://api.mapbox.com/mapbox.js/plugins/leaflet-locatecontrol/v0.43.0/L.Control.Locate.mapbox.css", :rel => "stylesheet"}/
%link{:href => "https://api.mapbox.com/mapbox.js/plugins/leaflet-locatecontrol/v0.43.0/css/font-awesome.min.css", :rel => "stylesheet"}/
%script{:src => "/src/confirm_map.js"}

%section.create-activity.col-md-6.col-md-offset-3.col-xs-12.container.center.well
  %h2
    .confirm-head Confirm your activity
  %h4 Check that the details below are correct then go down to the map
  %p
  = form_for [@user, @activity], :url => user_activities_path(@user), html: { multipart: true } do |f|
    %div.form-group.form-input= f.text_field :title, :placeholder => "Activity Name", :readonly => true, class: 'confirm-box'
    %div.form-group.form-input= f.text_field :description, :placeholder => "Describe your Activity", :readonly => true, class: 'confirm-box'
    %div.form-group.form-input= f.number_field :participants,  { min: 1, :placeholder => "People needed", :readonly => true, class: 'confirm-box' }
    = f.label :When, class: 'confirm-label'
    %div.form-group= f.text_field :datetime, { value: "#{@activity.datetime.strftime("%a %d %b, %Y - at %I:%M %p")}", :readonly => true, class: 'confirm-box' }
    = f.label :category, class: 'confirm-label'
    %div.form-group= f.text_field :category, :readonly => true, class: 'confirm-box'
    %div.form-group.form-input= f.text_field :tag, :placeholder => "Activity e.g.'Football'", :readonly => true, class: 'confirm-box'
    %div.form-group.form-input= f.text_field :location, :placeholder => "Location", :readonly => true, class: 'confirm-box'
    = f.hidden_field :latitude
    = f.hidden_field :longitude
    %p
    %div.form-group= f.submit "Confirm", class: "submit-btn"
  %h4
    %b Use the map to narrow down the perfect spot!
  #confirm_map{:style => "width:200" "height:350px"}
    .sk-folding-cube
      .sk-cube1.sk-cube
      .sk-cube2.sk-cube
      .sk-cube4.sk-cube
      .sk-cube3.sk-cube
