
- if params["Category"] == "Outdoor"
  .outdoor-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Outdoor
- elsif params["Category"] == "Sports"
  .sports-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Sports
- elsif params["Category"] == "Food"
  .food-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Food
- elsif params["Category"] == "Coding"
  .coding-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Coding
- elsif params["Category"] == "Other"
  .other-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Other
- elsif params["Category"] == "Culture"
  .culture-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Culture
- elsif params["Category"] == "Education"
  .education-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Education
- elsif params["Category"] == "Nightlife"
  .nightlife-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Nightlife
- elsif params["Category"] == "Comedy"
  .comedy-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Comedy
- elsif params["Category"] == "Music"
  .music-header
    %h1.col-md-6.col-md-offset-3.col-xs-12 Music


%section.content
  %h2.heading.heading--light.heading--center.heading--dark.promoted-collection__title
  - if @activities.any?
    - @activities.each do | activity |
      %container
        %div.each-activity.col-md-4
          %h2=link_to activity.title, activity_path(activity)
          %h3= activity.location
          %h3= activity.datetime
